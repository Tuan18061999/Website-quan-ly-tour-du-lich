@using QuanLyTourDuLich.Models;
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/_LayoutChung.cshtml";
    List<TOUR> lstTrongNuoc = ViewBag.lstTrongNuoc;
    List<TOUR> lstNgoaiNuoc = ViewBag.lstNgoaiNuoc;
}

<div id="carouselExample" class="carousel slide mt-1 w-100" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExample" data-slide-to="1"></li>
        <li data-target="#carouselExample" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active" data-interval="100">
            <img class="d-block w-100" style="height:440px;" src="Content/AnhDoAn/slide1.jpg" />
        </div>
        <div class="carousel-item" data-interval="100">
            <img class="d-block w-100" style="height:440px;"; src="Content/AnhDoAn/slide2.jpg" />
        </div>
        <div class="carousel-item" data-interval="100">
            <img class="d-block w-100" style="height:440px;"; src="Content/AnhDoAn/logo.jpg" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container text-center">
    <h3>TOUR TRONG NƯỚC</h3>
    <div class="row">
        @foreach (var item in lstTrongNuoc)
        {
            <div class="col-md-4">
                <div class ="card w-100">
                    <div class="card-img-top">
                        <a href="@Url.Action("ChiTietTour","ThongTinTour",new { id = @item.MaSoTour })"><img src="~/Content/AnhDoAn/@item.HinhAnhTour"/ style="width:100%; height:210px;"></a>
                    </div>
                    <div class="card-body">
                        @Html.ActionLink(@item.TenTour, "ChiTietTour", "ThongTinTour", new { id = @item.MaSoTour }, new { @class = "card-title" })
                        <p class="card-text">@String.Format("{0:#,###}",item.Gia) VNĐ</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("ThemTour", "DatTour", new { maTour = item.MaSoTour })"><img src="~/Content/AnhDoAn/btnDatTour.png" /></a>
                    </div>
                </div>
            </div>
        }
    </div>
    <h3>TOUR NGOÀI NƯỚC</h3>
    <div class="row">
        @foreach (var item in lstNgoaiNuoc)
        {
            <div class="col-md-4">
                <div class ="card w-100">
                    <div class="card-img-top">
                        <a href="@Url.Action("ChiTietTour","ThongTinTour",new { id = @item.MaSoTour })"><img src="~/Content/AnhDoAn/@item.HinhAnhTour"/ style="width:100%; height:210px;"></a>
                    </div>
                    <div class="card-body">
                        @Html.ActionLink(@item.TenTour, "ChiTietTour", "ThongTinTour", new { id = @item.MaSoTour }, new { @class = "card-title" })
                        <p class="card-text">@String.Format("{0:#,###}",item.Gia) VNĐ</p>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("ThemTour", "DatTour", new { maTour = item.MaSoTour })"><img src="~/Content/AnhDoAn/btnDatTour.png" /></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

