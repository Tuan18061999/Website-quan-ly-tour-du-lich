@{
    ViewBag.Title = "TimKiemNangCao";
    Layout = "~/Views/_LayoutChung.cshtml";
}
<div class="container">
    <div class="row">
        <h2>Tìm kiếm nâng cao</h2>
    </div>
    <div class="row">
        <form action="/TienIch/TimKiemNangCao" method="post" class="form-group">
            <label>Tên tour</label>
            <input type="text" name="txtName" class="form-control"/>
            <label>Nơi muốn đến</label><br />
            @Html.DropDownList("txtTinh", ViewBag.lstTinh as SelectList,"Tất cả")<br />
            <label>Khoảng thời khứ hồi</label>
            <label>Ngày đi</label>
            <input type="date" name="txtNgayDi" class="form-control" />
            <label>Ngày về</label><br />
            <input type="date" name="txtNgayVe" class="form-control" />
            <label>Giá</label><br />
            <input type="checkbox" name="gia1" value="1" class="from-control" />0-10.000.000 VNĐ<br />
            <input type="checkbox" name="gia2" value="2" class="from-control"/>11.000.000-20.000.000 VNĐ<br />
            <input type="checkbox" name="gia3" value="3" />21.000.000-40.000.000 VNĐ<br />
            <input type="checkbox" name="gia4" value="4" />Lớn hơn 40.000.000 VNĐ<br />
            <button type="submit" class="btn btn-primary">TÌM KIẾM</button>
        </form>
    </div>
</div>


